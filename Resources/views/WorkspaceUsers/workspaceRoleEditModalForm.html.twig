<div id="modal-workspace-role-edit-form"
     class="modal-dialog"
     role="dialog"
     aria-labelledby="modalLabel"
     aria-hidden="true"
>
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                &times;
            </button>
            <h3 class="modal-title">
                {{ 'role_edition'|trans({}, 'platform') }}
            </h3>
        </div>
        <div class="modal-body">
            <form id="workspace-role-edit-form"
                  action="{{
                      path(
                          'claro_workspace_users_role_edit',
                          {'role': role.getId(), 'workspace': workspace.getId()}
                      )
                  }}"
                  method="POST"
            > 
                {{ form_widget(form) }}
            </form>
        </div>
        <div class="modal-footer">
            <span class="btn btn-default" data-dismiss="modal">
                {{ 'cancel'|trans({},'platform') }}
            </span>
            <button type="button" id='edit-btn' class="btn btn-primary">
                {{ 'ok'|trans({},'platform') }}
            </button>
        </div>
    </div>
</div>